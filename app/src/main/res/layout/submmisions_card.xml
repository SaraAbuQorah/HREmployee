<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview2"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginBottom="10dp"
        android:background="@color/Dark_Silver"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imgsub"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="4dp"
            android:background="@drawable/white_border"
            android:src="@drawable/ic_baseline_image_24"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="10dp"

            >

            <TextView
                android:id="@+id/titlesub1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Yasmeen Ezzelddin Mesmar "
                />
            <TextView
                android:id="@+id/titlesub2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/blue"
                android:text="Download Here "
                />
            <TextView
                android:id="@+id/titlesub3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="11-Mar-2023"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>